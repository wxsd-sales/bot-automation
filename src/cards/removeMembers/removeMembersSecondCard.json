{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "wrap": true,
      "horizontalAlignment": "Center",
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "horizontalAlignment": "Center",
      "size": "Medium"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Step 1:",
              "wrap": true,
              "horizontalAlignment": "Center",
              "isSubtle": true,
              "size": "Small"
            },
            {
              "type": "TextBlock",
              "text": "Engagement Type",
              "wrap": true,
              "maxLines": 0,
              "horizontalAlignment": "Center",
              "isSubtle": true,
              "size": "Small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Step 2:",
              "wrap": true,
              "size": "Small",
              "isSubtle": false,
              "horizontalAlignment": "Center"
            },
            {
              "type": "TextBlock",
              "text": "Select Responders",
              "wrap": true,
              "size": "Small",
              "isSubtle": false,
              "horizontalAlignment": "Center"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Step 3:",
              "wrap": true,
              "size": "Small",
              "isSubtle": true,
              "horizontalAlignment": "Center"
            },
            {
              "type": "TextBlock",
              "text": "Review",
              "wrap": true,
              "size": "Small",
              "isSubtle": true,
              "horizontalAlignment": "Center"
            }
          ]
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "Engagement Type",
      "id": "members",
      "separator": true,
      "isRequired": true,
      "isMultiSelect": true,
      "style": "expanded"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Cancel",
          "data": {
            "command": "delete"
          },
          "style": "destructive",
          "associatedInputs": "none"
        },
        {
          "type": "Action.Submit",
          "title": "Next",
          "data": {
            "command": "member_remove_step_2"
          },
          "style": "positive",
          "associatedInputs": "auto"
        }
      ]
    }
  ]
}
