{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "https://avatars.slack-edge.com/2021-06-24/2233642559168_0ece5626019f23253940_512.png",
              "size": "Medium",
              "height": "50px"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "World Wide Sales - Center of Excellence",
              "weight": "Lighter"
            },
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Lead Assign Request",
              "wrap": true,
              "size": "Large",
              "spacing": "Small"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Name:",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "--select--",
      "spacing": "None",
      "id": "name"
    },
    {
      "type": "TextBlock",
      "text": "Select current FY quater:",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "--select--",
      "spacing": "None",
      "id": "quater"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit",
          "id": "submit",
          "data": {
            "submit": "assign"
          }
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}
